<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <label for="titulo">Titulo</label>
                    <input type="text" id="titulo" class="form-control" name="titulo" value="{{novedad.titulo}}" />
                </div>
                <div class="form-group">
                    <label for="subtitulo">Subtitulo</label>
                    <input type="text" id="subtitulo" class="form-control" name="subtitulo"
                        value="{{novedad.subtitulo}}">
                </div>
                <div class="form-group">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label>
                            <input type="checkbox" name="img_delete" id="img_delete" value="1">
                            Eliminar imagen actual?
                        </label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>

                <div class="form-group">
                    <label for="cuerpo">Cuerpo</label>
                    <textarea id="cuerpo" name="cuerpo" class="form-control">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>